root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.md]
trim_trailing_whitespace = false
insert_final_newline = true

# 4 space indentation
[*.py]
trim_trailing_whitespace = true
indent_style = space
charset = utf-8
indent_size = 4

[lib/**.js]
indent_style = space
indent_size = 2

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2
